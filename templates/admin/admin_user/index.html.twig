{% extends 'admin/adminLayout.html.twig' %}

{% block title %}Gestion des utilisateurs
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin_user') }}
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="text_primary">Gestion des utilisateurs</h1>

		<div class="mb-3">
			<form action="{{ path('admin_user_index') }}" method="get" class="d-flex">
				<input type="text" name="search" placeholder="Rechercher par nom" class="form-control me-2">
				<button type="submit" class="btn btn-primary btn-pills">Rechercher</button>
			</form>
		</div>

		<table class="table table-success table-striped table-header-fixed">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Status</th>
					<th></th>

				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.lastname }}</td>
						<td>{{ user.firstname }}</td>
						<td>
							{% if 'ROLE_ADMIN' in user.roles %}
								Administrateur
							{% elseif 'ROLE_EMPLOYEE' in user.roles %}
								Salarié
							{% else %}
								Bénévole
							{% endif %}
						</td>
						<td>
							<a class="btn btn-sm btn-outline-primary" href="{{ path('admin_user_edit', {'id': user.id}) }}">
								{% include 'icons/pencil.svg'%}
								Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucun utilisateur trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</main>
{% endblock %}
