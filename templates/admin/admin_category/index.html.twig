{% extends 'admin/adminLayout.html.twig' %}

{% block title %}Gestion des catégories
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin_user') }}
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="text-primary fw-bold fs-1 my-5">Gestion des catégories</h1>


		<table class="table table-success table-striped table-header-fixed">

			<thead>
				<tr>
					<th>Titre de la catégorie</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.title }}</td>
						<td>
							<a href="{{ path('admin_category_delete', {'id': category.id}) }}">
								{% include 'icons/cross.svg'%}
								Supprimer</a>
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	{% else %}
		<tr>
			<td colspan="3">Aucune catégorie trouvée</td>
		</tr>
	{% endfor %}
</tbody></table></main>{% endblock %}
