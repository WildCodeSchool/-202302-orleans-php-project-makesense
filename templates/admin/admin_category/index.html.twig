{% extends 'admin/adminLayout.html.twig' %}

{% block title %}Gestion des catégories
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin_user') }}
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="text-primary fw-bold fs-1 my-5">Gestion des catégories</h1>


		<table class="table table-success table-striped table-header-fixed">
			<thead>
				<tr>
					<th>Titre de la catégorie</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.title }}</td>

						<td>
							<a class="btn btn-sm btn-outline-primary" href="{{ path('admin_category_edit', {'id': category.id}) }}">
								{% include 'icons/pencil.svg'%}
								Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucune catégorie trouvée</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-primary rounded-pill mb-5 mt-3" href="{{ path('admin_category_new') }}">Ajouter une catégorie</a>


	</main>
{% endblock %}
