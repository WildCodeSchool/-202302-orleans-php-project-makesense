{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="bg-image text-center text-light">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h1 class="h2 text-light fw-bold">Connexion</h1>
        <p class="h6 mb-0 text-light fw-semibold">Vous n'avez pas encore de compte ?</p>
        <a class="signup text-tertiary fw-light" href="#">S'inscrire</a>

        <form class="mt-3" action="{{ path('app_login') }}" method="post">
            <div class="form-group text-start mb-3">
                <label class="form-label text-tertiary fw-semibold" for="username">Adresse email :</label>
                <input class="form-control border border-secondary" type="email" id="username" name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group text-start">
                <label class="form-label text-tertiary fw-semibold" for="password">Mot de passe :</label>
                <input class="form-control border border-secondary" type="password" id="password" name="_password">
                <a class="forget text-tertiary fw-light" href="#">Mot de passe oubli√© ?</a>
            </div>
            <button class="h4 mt-4 btn btn-tertiary text-primary fw-bold" type="submit">CONNEXION</button>
        </form>
    </div>
</div>
{% endblock %}
