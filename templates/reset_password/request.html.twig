{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('reset-password') }}
{% endblock %}

{% block title %}Réinitialiser mon mot de passe{% endblock %}

{% block body %}
<div class="container my-5">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center fw-bold mb-5">Réinitialiser mon mot de passe</h1>
    <div class="d-flex justify-content-center">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Saisissez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>
        <div class="text-center">
            <button class="btn btn-light mt-4 px-3 rounded-pill text-primary fw-bold">Envoyer</button>
        </div>
    </div>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
